@page "cds/delete"
@model LibraryProject.Pages.Products.CDs.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <br />
    <h4>CD</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CD.name)
        </dd>
        <dt class="col-sm-2">
            Singer
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CD.singer)
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CD.price)
        </dd>
        <dt class="col-sm-2">
            Album Cover
        </dt>
        <dd class="col-sm-10">
            <img src="~/images/cds/@Model.CD.coverImage" height="100" />
        </dd>
        <dt class="col-sm-2">
            Album
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CD.album)
        </dd>
        <dt class="col-sm-2">
            Year of Release
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CD.releaseYear)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="CD.id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
