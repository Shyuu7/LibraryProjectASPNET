@page "cds/details"
@model LibraryProject.Pages.Products.CDs.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>CD</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CD.name)
        </dd>
        <dt class="col-sm-2">
            Singer
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CD.singer)
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CD.price)
        </dd>
        <dt class="col-sm-2">
            Album Cover
        </dt>
        <dd class="col-sm-10">
            <img src="~/images/cds/@Model.CD.coverImage" height="100" />
        </dd>
        <dt class="col-sm-2">
            Album
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CD.album)
        </dd>
        <dt class="col-sm-2">
            Year of Release
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CD.releaseYear)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.CD?.id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
