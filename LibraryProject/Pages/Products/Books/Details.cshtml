@page "books/details"
@model LibraryProject.Pages.Products.Books.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.title)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.description)
        </dd>
        <dt class="col-sm-2">
            Book Cover
        </dt>
        <dd class="col-sm-10">
            <img src="~/images/books/@Model.Book.coverImage" height="100" />
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.price)
        </dd>
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.author)
        </dd>
        <dt class="col-sm-2">
            ISBN
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.ISBN)
        </dd>
        <dt class="col-sm-2">
            Publishing Year
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.publishingYear)
        </dd>
        <dt class="col-sm-2">
            Genre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.genre)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Book?.id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
