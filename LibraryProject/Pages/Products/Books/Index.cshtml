@page "/books/all"
@model LibraryProject.Pages.Products.Books.IndexModel

@{
	ViewData["Title"] = "Index";
}

<h1>All of our current books</h1>

<p>
	<a asp-page="Create">Add your own book</a>
</p>
<table class="table table-striped table-bordered">

	<thead>
		<tr>
			<th>Id</th>
			<th>Title</th>
			<th>Description</th>
			<th>Book Cover</th>
			<th>Price</th>
			<th>Author</th>
			<th>Publishing Year</th>
			<th>Genre</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Book)
		{
			<tr>
				<td>@item.id</td>
				<td>@item.title</td>
				<td>@item.description</td>
				<td><img src="~/images/books/@item.coverImage" height="100" /></td>
				<td>@item.price</td>
				<td>@item.author</td>
				<td>@item.publishingYear</td>
				<td>@item.genre</td>
				<td>
					<a asp-page="./Edit" asp-route-id="@item.id">Edit book</a> |
					<a asp-page="./Details" asp-route-id="@item.id">Details</a> |
					<a asp-page="./Delete" asp-route-id="@item.id">Delete book</a>
				</td>
			</tr>
		}
	</tbody>

</table>

@section Footer
{
	<img src="~/images/library/library1.jpg" width="200" />
}
